        })
    })

    $("#form-modal").on('show.bs.modal', function (event) {
        const button = $(event.relatedTarget);
        const id = button.data('id');
        const modal = $(this);
        modal.find('.modal-title').text('Update Todo');
        modal.find('#todoForm').val(id);
