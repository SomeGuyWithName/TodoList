        let html = '';
        data.forEach((todo, index) => { 
            html += `
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="alert alert-light ${todo.complete ? 'alert-success' : 'alert-danger'}" role="alert">
                        <span class="flex-grow-1">${todo.title}</span>
                        <div class="d-flex gap-2">
                            <!-- Add buttons or actions here if needed -->
                        </div>
                    </div>
                </li>
            `;
        });
        $('#listTodo').html(html); // Correctly updates the list
    }).fail(function (error) {
        console.error("Error fetching todos:", error); // Handle errors gracefully
    });
};



    const todoSave = async () => {
        $.ajax({
            method: POST,
